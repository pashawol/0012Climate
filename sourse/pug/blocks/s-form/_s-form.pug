mixin s-form-08()
	// start s-form
	+b.s-form--contact.section#s-form&attributes(attributes)
		 
		.container
			+b.section-title.text-center
				h2 Остались вопросы? Задайте их нашему специалисту 
				+e.text Заполните форму и мы ответим Вам в течении 12 часов
			+form-wrap()
				.row
					.col-lg-4
						+input('text','Ваше имя')
					.col-lg-4
						+input('tel','Номер телефона')
					.col-lg-4
						+input('email','Ваш e-mail')
				+ta('Ваше имя')
				.row.align-items-center
					.col-md-auto
						+e.btn(type='submit') Отправить
					.col.order-md-first
						+polite
	// end s-form
